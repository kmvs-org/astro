---
import { getFooter, getAddress } from '../../sanity/api';
import { sanityUrl } from '../../sanity/image';
import Socials from './Socials.astro';

const footer = await getFooter();
const address = await getAddress();
---

<footer>
	<section class='contact'>
		<div class='container'>
			<h2>Connect With Us</h2>
		</div>
		<svg
			class='divider'
			preserveAspectRatio='none'
			xmlns='http://www.w3.org/2000/svg'
			viewBox='0 0 1282 44.92'>
			<path
				class='cls-1'
				d='M1282,2.84c-222.37,21.05-422.67,55.63-959.16,4.55C172.76-6.9,66.72,1.97,0,13.54v31.38h1282V2.84Z'>
			</path>
		</svg>
		<div class='forms'>
			<div class='container'>
				<Socials color='var(--textC2)' />
				<div class='tabs'>
					<div
						class='tab-buttons'
						role='tablist'
						aria-label='Subscribe or Contact'>
						<button
							class='tab-button selected'
							type='button'
							id='tab_1'
							role='tab'
							aria-selected='true'
							aria-controls='tabpanel_1'>
							<span>Contact</span>
						</button>
						<button
							class='tab-button'
							type='button'
							id='tab_2'
							role='tab'
							aria-selected='false'
							aria-controls='tabpanel_2'>
							<span>Newsletter</span>
						</button>
					</div>
					<div class='tab-contents'>
						<div
							class='tab-content selected'
							role='tabpanel'
							aria-labelledby='tab_1'>
							<form action='' method='POST'>
								<input
									type='text'
									name='name'
									placeholder='Name'
									required
								/>
								<input
									type='email'
									name='email'
									placeholder='Email Address'
									required
								/>
								<input
									type='text'
									name='phone'
									placeholder='Mobile Number'
								/>
								<textarea placeholder='Message' required
								></textarea>
								<button type='submit'>Submit</button>
							</form>
						</div>
						<div
							class='tab-content'
							role='tabpanel'
							aria-labelledby='tab_2'>
							<form action='' method='POST'>
								<input
									type='text'
									placeholder='Name'
									required
								/>
								<input
									type='email'
									placeholder='Email Address'
									required
								/>
								<button type='submit'>Subscribe</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section class='footer'>
		<div class='container'>
			<img
				src={sanityUrl(footer.logo).width(500).auto('format').url()}
				alt={footer.logo.alt}
				class='footer-logo'
			/>
			<div class='footer-menu'>
				<ul>
					{
						footer.menuItems.map((menuItem) => (
							<li>
								<a href={menuItem.link}>{menuItem.text}</a>
							</li>
						))
					}
				</ul>
			</div>
			<div class='footer-address'>
				<p>Registered Office</p>
				<p class='address'>{address}</p>
			</div>
		</div>
	</section>
</footer>

<script>
	const tabButtons = document.querySelectorAll('.tab-button');
	const tabContents = document.querySelectorAll('.tab-content');

	tabButtons.forEach((tabButton) => {
		tabButton.addEventListener('click', () => {
			tabButtons.forEach((button) => {
				button.classList.remove('selected');
				button.attributes['aria-selected'].value = 'false';
			});
			tabButton.classList.add('selected');
			tabButton.attributes['aria-selected'].value = 'true';

			tabContents.forEach((tabContent) => {
				tabContent.classList.remove('selected');
				if (
					tabContent.getAttribute('aria-labelledby') === tabButton.id
				) {
					tabContent.classList.add('selected');
				}
			});
		});
	});
</script>

<style lang='less'>
	@import '../styles/variables.less';

	footer {
		.contact {
			overflow: hidden;
			.container {
				h2 {
					color: var(--color1);
					font-weight: 400;
					font-size: 50px;
					text-align: center;

					@media @s-m {
						font-size: 36px;
					}
				}
			}
			.divider {
				width: 100%;
				height: 50px;
				display: flex;

				@media @s-t {
					width: 130%;
				}
				@media @s-m {
					width: 250%;
				}
				path {
					fill: var(--color3);
				}
			}
			.forms {
				background-color: var(--color3);
				padding-bottom: 50px;
				.container {
					:global(.social-links) {
						margin: 0;
						width: max-content;
						transform: translateY(-20px);
						padding-top: 10px;
						padding-bottom: 10px;

						@media @s-m {
							margin: auto;
							padding-bottom: 50px;
						}
					}

					.tabs {
						display: flex;
						flex-direction: row;
						justify-content: center;

						@media @s-m {
							flex-direction: column;
						}
						.tab-buttons {
							display: flex;
							flex-direction: column;

							@media @s-nm {
								border-right: 6px solid var(--textC2);
								margin-right: 30px;
								gap: 15px;
								align-items: flex-end;
								justify-content: center;
							}

							@media @s-m {
								width: max-content;
								margin: auto;
								border-bottom: 6px solid var(--textC2);
								flex-direction: row;
								justify-content: center;
								margin-bottom: 20px;
							}
							.tab-button {
								@media @s-nm {
									width: 200px;
									font-size: 32px;
									border-radius: var(--bdRadius1) 0 0
										var(--bdRadius1);
								}
								@media @s-m {
									font-size: 24px;
									border-radius: var(--bdRadius1)
										var(--bdRadius1) 0 0;
								}
								font-weight: 600;
								line-height: 1;
								padding: 8px 16px;

								&:not(.selected) {
									background-color: transparent;
									color: var(--textC2);
								}
								&.selected {
									background-color: var(--textC2);
									color: var(--color3);
								}
							}
						}
						.tab-contents {
							.tab-content {
								&:not(.selected) {
									display: none;
								}
								form {
									display: flex;
									flex-direction: column;
									align-items: center;
									gap: 15px;
									@media @s-nm {
										height: 320px;
									}

									button[type='submit'] {
										background-color: var(--textC2);
										color: var(--color3);
										font-size: 1.3em;
										padding: 8px 16px;
									}
								}
							}
						}
					}
				}
			}
		}
		.footer {
			.container {
				padding-top: 30px;
				padding-bottom: 30px;

				display: flex;

				@media @s-d {
					flex-direction: row;
					flex-wrap: wrap;
					justify-content: space-around;
					align-items: center;
				}

				@media @s-nd {
					flex-direction: column;
					align-items: center;
				}

				gap: 50px;

				.footer-logo {
					width: 240px;
				}

				.footer-menu {
					ul {
						list-style: none;
						display: grid;
						grid-template-rows: repeat(6, 1fr);
						grid-auto-flow: column;
						gap: 5px 30px;
						li {
							a {
								text-decoration: none;
							}
						}
					}
				}
				.footer-address {
					@media @s-m {
						text-align: center;
					}
					.address {
						max-width: 350px;
						padding: 20px;
						border-radius: var(--bdRadius1);
						border: 1px solid var(--textC1);
					}
				}
			}
		}
	}
</style>
