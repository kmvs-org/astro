---
import { getSocials } from '../../sanity/api';
const socials = await getSocials();

const { color = 'var(--color1)' } = Astro.props;
---

<div class='social-links'>
	{
		socials.facebook && (
			<a
				href={socials.facebook}
				class='facebook'
				aria-label='Facebook'
				title='Facebook'>
				<svg
					class='icon-facebook'
					height='1em'
					xmlns='http://www.w3.org/2000/svg'
					viewBox='0 0 512 512'>
					<path d='M512 256C512 114.6 397.4 0 256 0S0 114.6 0 256C0 376 82.7 476.8 194.2 504.5V334.2H141.4V256h52.8V222.3c0-87.1 39.4-127.5 125-127.5c16.2 0 44.2 3.2 55.7 6.4V172c-6-.6-16.5-1-29.6-1c-42 0-58.2 15.9-58.2 57.2V256h83.6l-14.4 78.2H287V510.1C413.8 494.8 512 386.9 512 256h0z' />
				</svg>
			</a>
		)
	}
	{
		socials.twitter && (
			<a
				href={socials.twitter}
				class='twitter'
				aria-label='Twitter'
				title='Twitter'>
				<svg
					class='icon-twitter'
					height='1em'
					xmlns='http://www.w3.org/2000/svg'
					viewBox='0 0 512 512'>
					<path d='M459.4 151.7c.3 4.5 .3 9.1 .3 13.6 0 138.7-105.6 298.6-298.6 298.6-59.5 0-114.7-17.2-161.1-47.1 8.4 1 16.6 1.3 25.3 1.3 49.1 0 94.2-16.6 130.3-44.8-46.1-1-84.8-31.2-98.1-72.8 6.5 1 13 1.6 19.8 1.6 9.4 0 18.8-1.3 27.6-3.6-48.1-9.7-84.1-52-84.1-103v-1.3c14 7.8 30.2 12.7 47.4 13.3-28.3-18.8-46.8-51-46.8-87.4 0-19.5 5.2-37.4 14.3-53 51.7 63.7 129.3 105.3 216.4 109.8-1.6-7.8-2.6-15.9-2.6-24 0-57.8 46.8-104.9 104.9-104.9 30.2 0 57.5 12.7 76.7 33.1 23.7-4.5 46.5-13.3 66.6-25.3-7.8 24.4-24.4 44.8-46.1 57.8 21.1-2.3 41.6-8.1 60.4-16.2-14.3 20.8-32.2 39.3-52.6 54.3z' />
				</svg>
			</a>
		)
	}
	{
		socials.instagram && (
			<a
				href={socials.instagram}
				class='instagram'
				aria-label='Instagram'
				title='Instagram'>
				<svg
					class='icon-instagram'
					height='1em'
					xmlns='http://www.w3.org/2000/svg'
					viewBox='0 0 512 512'>
					<path d='M256.08,511.76c-37.25,0-74.51.63-111.74-.13C61.55,509.95,3.82,454.85,1.57,371.9c-2.1-77.42-2.11-154.99.04-232.41C3.87,58.22,60.32,3.59,143.8,1.4c74.82-1.97,149.76-1.78,224.59.06,53.49,1.31,97.86,22.77,124.97,71.8,11.71,21.18,17.4,44.6,17.65,68.44.79,77.1,1.9,154.27-.28,231.32-1.47,51.97-24.03,94.42-71.34,120.65-20.52,11.38-42.89,17.23-66.09,17.73-39.06.84-78.15.23-117.22.23,0,.04,0,.08,0,.13ZM123.32,255.25c-.08,75.32,58.01,133.95,132.7,133.93,72.79-.01,132.75-58.95,133.03-130.78.29-74.4-59.11-134.84-132.67-134.99-73.21-.15-132.98,59.08-133.06,131.84ZM425.31,118.55c-.28-17.8-14.79-31.71-32.56-31.2-17.42.5-30.81,14.67-30.33,32.12.48,17.73,14.18,30.9,31.85,30.6,17.45-.29,31.32-14.37,31.05-31.52Z' />
					<path d='M170.39,255.35c-.07-45.36,38.81-83.65,85.22-83.92,46.99-.27,85.34,38.32,85.44,85.97.1,45.91-39.56,85.07-85.77,84.7-46.88-.37-84.81-39.14-84.89-86.74Z' />
				</svg>
			</a>
		)
	}
	{
		socials.linkedin && (
			<a
				href={socials.linkedin}
				class='linkedin'
				aria-label='LinkedIn'
				title='LinkedIn'>
				<svg
					class='icon-linkedin'
					height='1em'
					xmlns='http://www.w3.org/2000/svg'
					viewBox='0 0 512 512'>
					<path d='M416 32H31.9C14.3 32 0 46.5 0 64.3v383.4C0 465.5 14.3 480 31.9 480H416c17.6 0 32-14.5 32-32.3V64.3c0-17.8-14.4-32.3-32-32.3zM135.4 416H69V202.2h66.5V416zm-33.2-243c-21.3 0-38.5-17.3-38.5-38.5S80.9 96 102.2 96c21.2 0 38.5 17.3 38.5 38.5 0 21.3-17.2 38.5-38.5 38.5zm282.1 243h-66.4V312c0-24.8-.5-56.7-34.5-56.7-34.6 0-39.9 27-39.9 54.9V416h-66.4V202.2h63.7v29.2h.9c8.9-16.8 30.6-34.5 62.9-34.5 67.2 0 79.7 44.3 79.7 101.9V416z' />
				</svg>
			</a>
		)
	}
	{
		socials.youtube && (
			<a
				href={socials.youtube}
				class='youtube'
				aria-label='YouTube'
				title='YouTube'>
				<svg
					class='icon-youtube'
					height='1em'
					xmlns='http://www.w3.org/2000/svg'
					viewBox='0 0 576 512'>
					<path d='M549.7 124.1c-6.3-23.7-24.8-42.3-48.3-48.6C458.8 64 288 64 288 64S117.2 64 74.6 75.5c-23.5 6.3-42 24.9-48.3 48.6-11.4 42.9-11.4 132.3-11.4 132.3s0 89.4 11.4 132.3c6.3 23.7 24.8 41.5 48.3 47.8C117.2 448 288 448 288 448s170.8 0 213.4-11.5c23.5-6.3 42-24.2 48.3-47.8 11.4-42.9 11.4-132.3 11.4-132.3s0-89.4-11.4-132.3zm-317.5 213.5V175.2l142.7 81.2-142.7 81.2z' />
				</svg>
			</a>
		)
	}
</div>

<style lang='less' define:vars={{ color }}>
	.social-links {
		display: flex;
		flex-direction: row;
		flex-wrap: nowrap;
		justify-content: center;
		align-items: center;
		gap: 12px;

		a {
			display: flex;
			svg {
				height: 28px;
				path {
					fill: var(--color);
				}
			}
		}
	}
</style>
